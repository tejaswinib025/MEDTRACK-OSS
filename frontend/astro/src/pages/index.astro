---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Welcome to MedTrack OSS">
	<main class="max-w-4xl mx-auto py-20 px-4 text-center">
		<h1 class="text-6xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-6">
			MedTrack OSS
		</h1>
		<p class="text-xl text-slate-400 mb-10">
			The Open Medication & Health Reminder System for Everyone.
		</p>
		<div class="flex justify-center gap-4">
			<a href="/dashboard" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold transition">
				Get Started
			</a>
			<a href="https://github.com" class="px-8 py-3 bg-slate-800 hover:bg-slate-700 rounded-lg font-semibold transition border border-slate-700">
				View on GitHub
			</a>
		</div>
	</main>
</MainLayout>
